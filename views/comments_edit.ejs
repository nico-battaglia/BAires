<%- include('./partials/header'); %> <!--  partial included here -->
<%- include ("partials/navbar") %>

<div class="container my-4">
	<div class="row">
		<div class="col">
			<h3 class="border-bottom border-dark pb-1">Edit Comment</h3>
			<form action="/places/<%= placeId %>/comments/<%= comment._id%>?_method=PUT" method="POST">
				<div class="row form-group m-3">
					<h6>User: <%= comment.user.username %></h6>
				</div>
				<div class="row form-group m-3">
					<label for="text">Comment</label>
					<textarea type="text" rows="8" class="form-control text-center" name="text" required><%= comment.text %></textarea>
				</div>
				<div class="row form-group m-3 bg-light">
					<button type="submit" class="btn btn-outline-success">Edit</button>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include('./partials/footer'); %> <!--  partial included here -->